<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EMI">



    <TextView
        android:layout_width="wrap_content"
        android:textSize="22dp"
        android:text="Calculate My Emi"
        android:typeface="serif"
        android:layout_gravity="center"
        android:layout_marginTop="22dp"
        android:textColor="@color/colorPrimary"
        android:textStyle="bold"
        android:layout_height="wrap_content" />


    <View
        android:layout_height="1dp"
        android:layout_width="240dp"
        android:layout_marginTop="5dp"
        android:layout_gravity="center"
        android:background="@color/colorPrimary">
    </View>
    <View
        android:layout_height="1dp"
        android:layout_width="240dp"
        android:layout_marginTop="3dp"
        android:layout_gravity="center"
        android:background="@color/colorPrimary">
    </View>


    <android.support.v7.widget.CardView
        android:layout_gravity="center"
        android:layout_height="wrap_content"
        android:layout_width="330dp"
        app:cardElevation="3dp"
        android:layout_margin="15dp">



        <LinearLayout
            android:layout_marginTop="12dp"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">




            <android.support.design.widget.TextInputLayout
                android:layout_marginTop="15dp"
                android:id="@+id/idinput1"
                android:layout_width="wrap_content"
                android:layout_gravity="center"
                android:backgroundTint="@color/colorPrimary"
                android:layout_height="wrap_content">
                <EditText
                    android:id="@+id/idamount"
                    android:layout_width="260dp"
                    android:hint="Enter Amount(Rs) "
                    android:maxLines="1"
                    android:textStyle="bold"
                    android:inputType="numberDecimal"
                    android:drawableLeft="@drawable/amount"
                    android:textSize="17sp"
                    android:backgroundTint="@color/colorPrimary"
                    android:textColor="@color/colorPrimary"
                    android:textColorHint="@color/colorPrimary"
                    android:layout_height="wrap_content" />
            </android.support.design.widget.TextInputLayout>
            <android.support.design.widget.TextInputLayout
                android:layout_marginTop="15dp"
                android:id="@+id/idinput2"
                android:layout_width="wrap_content"
                android:layout_gravity="center"
                android:backgroundTint="@color/colorPrimary"
                android:layout_height="wrap_content">
                <EditText
                    android:textStyle="bold"
                    android:id="@+id/idrate"
                    android:layout_width="260dp"
                    android:hint="Enter Rate(%) "
                    android:maxLines="1"
                    android:inputType="numberDecimal"
                    android:drawableLeft="@drawable/rate"
                    android:textSize="17sp"
                    android:backgroundTint="@color/colorPrimary"
                    android:textColor="@color/colorPrimary"
                    android:textColorHint="@color/colorPrimary"
                    android:layout_height="wrap_content" />
            </android.support.design.widget.TextInputLayout>
            <android.support.design.widget.TextInputLayout
                android:layout_marginTop="15dp"
                android:id="@+id/idinput3"
                android:layout_width="wrap_content"
                android:layout_gravity="center"
                android:backgroundTint="#FFFFFF"
                android:layout_height="wrap_content">
                <EditText
                    android:textStyle="bold"
                    android:id="@+id/idtime"
                    android:layout_width="260dp"
                    android:hint="Enter Time(Years) "
                    android:maxLines="1"
                    android:inputType="numberDecimal"
                    android:drawableLeft="@drawable/time"
                    android:textSize="17sp"
                    android:backgroundTint="@color/colorPrimary"
                    android:textColor="@color/colorPrimary"
                    android:textColorHint="@color/colorPrimary"
                    android:layout_height="wrap_content" />
            </android.support.design.widget.TextInputLayout>
            <LinearLayout

                android:layout_marginTop="22dp"
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="wrap_content">
                <TextView
                    android:textColor="@color/colorPrimary"
                    android:layout_marginLeft="24dp"
                    android:layout_width="wrap_content"
                    android:text="EMI  ="
                    android:layout_gravity="center"
                    android:textSize="25dp"
                    android:typeface="serif"
                    android:layout_height="wrap_content" />


                <TextView
                    android:layout_width="wrap_content"
                    android:text="00.00"
                    android:textSize="22dp"
                    android:textColor="@color/colorPrimary"
                    android:typeface="serif"
                    android:id="@+id/idemi"
                    android:layout_gravity="center"
                   android:layout_marginLeft="90dp"
                    android:layout_height="wrap_content" />


            </LinearLayout>
            <View
                android:layout_height="1dp"
                android:layout_width="290dp"
                android:layout_marginTop="5dp"
                android:layout_gravity="center"
                android:background="@color/colorPrimary">
            </View>


            <LinearLayout
                android:layout_marginTop="22dp"
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="wrap_content">

                <Button
                    android:onClick="Check"
                    android:id="@+id/idcheck"
                    android:layout_marginLeft="22dp"
                    android:layout_width="120dp"
                    android:text="CHECK"
                    android:textColor="#ffffff"
                    android:background="@drawable/shape"
                    android:layout_height="wrap_content" />



                <Button
                    android:id="@+id/idclear"
                    android:onClick="ClearData"
                    android:layout_marginLeft="22dp"
                    android:layout_width="120dp"
                    android:text="CLEAR"
                    android:textColor="#ffffff"
                    android:background="@drawable/shape"
                    android:layout_height="wrap_content" />
            </LinearLayout>



            <View
                android:layout_height="1dp"
                android:layout_width="290dp"
                android:layout_marginTop="10dp"
                android:layout_gravity="center"
                android:background="@color/colorPrimary">
            </View>
            <View
                android:layout_height="1dp"
                android:layout_width="290dp"
                android:layout_marginTop="5dp"
                android:layout_gravity="center"
                android:background="#000000">
            </View>
            <View
                android:layout_height="1dp"
                android:layout_width="290dp"
                android:layout_marginTop="5dp"
                android:layout_gravity="center"
                android:background="#ffffff">
            </View>
            <View
                android:layout_height="1dp"
                android:layout_width="290dp"
                android:layout_marginTop="5dp"
                android:layout_gravity="center"
                android:background="#ffffff">
            </View>

        </LinearLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>